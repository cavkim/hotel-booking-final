# Copy this file to .env and update the values according to your environment

# ===========================================
# API Configuration
# ===========================================
# Backend API Base URL
REACT_APP_API_URL=http://localhost:5501/v1

# API Timeout (in milliseconds)
REACT_APP_API_TIMEOUT=10000

# API Version
REACT_APP_API_VERSION=v1

# ===========================================
# Authentication Configuration
# ===========================================
# JWT Token storage key
REACT_APP_TOKEN_KEY=hotel_booking_token

# User data storage key
REACT_APP_USER_KEY=hotel_booking_user

# Session timeout (in minutes)
REACT_APP_SESSION_TIMEOUT=30

# ===========================================
# Payment Configuration
# ===========================================
# Payment Gateway Base URL
REACT_APP_PAYMENT_API_URL=http://localhost:5501/v1/payment

# Payment Gateway Timeout
REACT_APP_PAYMENT_TIMEOUT=15000

# Payment Success Redirect URL
REACT_APP_PAYMENT_SUCCESS_URL=http://localhost:3000/booking-confirmation

# Payment Cancel Redirect URL
REACT_APP_PAYMENT_CANCEL_URL=http://localhost:3000/booking

# ===========================================
# Application Configuration
# ===========================================
# Application Name
REACT_APP_NAME=Hotel Booking System

# Application Version
REACT_APP_VERSION=1.0.0

# Environment (development, staging, production)
REACT_APP_ENV=development

# Debug Mode
REACT_APP_DEBUG=true

# ===========================================
# External Services
# ===========================================
# Google Maps API Key (if using maps)
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Email Service API Key (if using email notifications)
REACT_APP_EMAIL_API_KEY=your_email_api_key

# SMS Service API Key (if using SMS notifications)
REACT_APP_SMS_API_KEY=your_sms_api_key

# ===========================================
# File Upload Configuration
# ===========================================
# Maximum file size for uploads (in bytes)
REACT_APP_MAX_FILE_SIZE=5242880

# Allowed file types for uploads
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===========================================
# Feature Flags
# ===========================================
# Enable/disable features
REACT_APP_ENABLE_PAYMENT=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG_TOOLS=true

# ===========================================
# Development Tools
# ===========================================
# Enable API testing tools
REACT_APP_ENABLE_API_TESTER=true

# Enable mock services
REACT_APP_ENABLE_MOCK_SERVICES=false

# Enable performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false
